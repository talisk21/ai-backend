generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Execution {
  id        String   @id @default(uuid())
  status    String
  startedAt DateTime @default(now())
  finishedAt DateTime?
  steps     Step[]
}

model Step {
  id           String   @id @default(uuid())
  executionId  String
  type         String   // "agent", "api", "tool"
  input        Json
  output       Json?
  error        String?
  createdAt    DateTime @default(now())

  execution    Execution @relation(fields: [executionId], references: [id])
}

model Log {
  id        String   @id @default(uuid())
  timestamp DateTime @default(now())
  level     String   // 'info', 'error', 'debug', 'warn'
  message   String
  context   String?  // например: 'StepProcessor', 'ExecutionsController'
  metadata  Json?    // любое доп. содержимое (userId, stepId и т.п.)
}

model RequestLog {
  id        String   @id @default(uuid())
  method    String
  url       String
  status    Int
  duration  Int
  timestamp DateTime @default(now())
  body      Json?
  query     Json?
  headers   Json?
}
